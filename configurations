## Input parameters
  ## Population parameters
population_size = 150
MR_mean = 1
MR_sd = 2

  ## Death parammeters
death_constant = 0.05
MR_death_impact = 0.2
age_impact=0.25

  ## Recruitment parameters
recruitment_constant = 0.01
recruitment_age = 8
recruitment_size_mean=25
recruitment_size_sd=recruitment_size_mean/2

  ## Initiate random population
init_MR <- rnorm(n=population_size, mean = MR_mean, sd = MR_sd); init_MR[init_MR<0]=0
init_age <- rep(1, population_size)
indiv_ID <- seq(from=1, to=population_size)

pop_df <- data.frame(indiv_ID=indiv_ID, time=0, MR=init_MR, mortality=0, age=init_age)


## Equation for mortality - weighted probability for death =
timepoint_count=0
time_point=1
time_max=100 # each timepoint is a season in this scenario
